<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="psilling">
        <createTable tableName="facilities">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="facilities_pkey" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="2" author="psilling">
        <createTable tableName="massages">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="massages_pkey" nullable="false"/>
            </column>
            <column name="date" type="TIMESTAMP(6) WITHOUT TIME ZONE">
            	<constraints nullable="false"/>
            </column>
            <column name="masseuse" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="facility_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="3" author="psilling">
        <createTable tableName="users">
            <column autoIncrement="true" name="id" type="BIGSERIAL">
                <constraints primaryKey="true" primaryKeyName="users_pkey" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
            	<constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
            	<constraints nullable="false"/>
            </column>
            <column name="admin" type="BOOLEAN">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="4" author="psilling">
        <addForeignKeyConstraint baseColumnNames="user_id" baseTableName="massages" constraintName="fk_address_user" deferrable="false" initiallyDeferred="false" onDelete="NO ACTION" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="users"/>
    </changeSet>
    <changeSet id="5" author="psilling">
    	<addForeignKeyConstraint baseColumnNames="facility_id" baseTableName="massages" constraintName="fk_address_facility" deferrable="false" initiallyDeferred="false" onDelete="CASCADE" onUpdate="NO ACTION" referencedColumnNames="id" referencedTableName="facilities"/>
    </changeSet>
</databaseChangeLog>